<% qa_partial = 'insurances/summary/user/shared_partials/question_answer.html.erb' %>

<div id="deliveryAddressCheck">
    <%= render qa_partial, question: t('has_previously_used_hermes_cover'), answer: @insurance.has_previously_used_hermes_cover ? t('yes') : t('no') %>
</div>

<div id="newAtHermesDeckung" style="display: <%= @insurance.has_previously_used_hermes_cover? ? 'none' : 'block' %>">
    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p><%= t('new_to_hermes_cover') %></p>
            <br><br>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p><i> <%= t('years_trading_without_hermes_insurance') %></i></p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <%= check_missing(@insurance.years_trading_without_hermes_insurance) %>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p><i> <%= t('experience_with_importer_country') %></i></p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <%= check_missing(@insurance.experience_with_importer_country) %>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1 ">
            <p><i> <%= t('adequate_claims_management') %> </i></p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <%= check_missing(@insurance.adequate_claims_management) %>
            <hr>
        </div>
    </div>
</div>


<div id="firmDaten">

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p> <%= t('exporter_company_data') %></p>
        </div>
    </div>
    <br>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">

            <% address_keys = [t('exporter_name'),t('exporter_dn_no'), t('exporter_telephone'), t('exporter_street_hno'), t('exporter_plz'), t('exporter_country')] %>

            <% address_values = [@insurance.exporter_name, @insurance.exporter_dn_no, @insurance.exporter_telephone, @insurance.exporter_street_hno, @insurance.exporter_plz, @insurance.exporter_country

            ] %>

            <% address_keys.zip(address_values).each do |addr_key, addr_value| %>

                <div class="row">
                    <div class="col-sm-6">
                        <span><%= addr_key %></span>
                    </div>
                    <div class="col-sm-6 text-babu">
                        <%= check_missing(addr_value) %>
                    </div>
                </div>

            <% end %>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p> <%= t('employees_count') %> </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p>  <%= check_missing(@insurance.employees_count) %> </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p> <%= t('revenue_last_year') %> </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p> <%= check_missing(@insurance.revenue_last_year) %></p>
            <hr>
        </div>
    </div>

</div>


<div id="firmenDaten">

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p> <%= t('exporter_representative') %> </p>
        </div>
    </div>
    <br>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">

            <% address_keys = [t('exporter_representative_firstname'),t('exporter_representative_lastname'),t('exporter_representative_email'),t('exporter_representative_function'),t('exporter_representative_department')] %>

            <% address_values = [@insurance.exporter_representative_firstname, @insurance.exporter_representative_lastname, @insurance.exporter_representative_email, @insurance.exporter_representative_function, @insurance.exporter_representative_department] %>

            <% address_keys.zip(address_values).each do |addr_key, addr_value| %>

                <div class="row">
                    <div class="col-sm-6">
                        <span><%= addr_key %></span>
                    </div>
                    <div class="col-sm-6 text-babu">
                        <%= check_missing(addr_value) %>
                    </div>
                </div>

            <% end %>
            <hr>
        </div>
    </div>

</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p><b><%= t('documents_for_examination') %> </b></p>
        </div>
    </div>
</div>

<div id="uploadDocuments">
    <div class="row">
        <div class="col-md-8 col-md-offset-1">

            <% file_types = [t('self_declaration_document'),t('annual_financial_statement_importer_document'), t('credit_bureaus_importer_document'), t('environment_social_audit_document'), t('project_memorandum_exporter_business'), t('Others')] %>

            <% file_names = [@insurance.self_disclosure_file_name, @insurance.annual_financial_statement_importer_file_name, @insurance.credit_bureaus_importer_file_name, @insurance.environment_social_audit_file_name, @insurance.project_memorandum_exporter_business_file_name, @insurance.additional_document_file_name] %>

            <% file_types.zip(file_names).each do |file_type, file_name| %>

                <div class="row">
                    <div class="col-sm-6">
                        <span><%= file_type %></span>
                    </div>
                    <div class="col-sm-6 text-babu">
                        <%= check_missing(file_name) %>
                    </div>
                </div>

            <% end %>
            <hr>
        </div>
    </div>
</div>

<div id="corruptionDeclaration">

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p> Corruption Declaration </p>
            <hr>
        </div>
    </div>

    <div class="row" style="display: <%= !@insurance.does_corruption_declaration_apply? ? 'block' : 'none' %>;">
        <div class="col-md-8 col-md-offset-1">
            <p class="text-babu">
                <%= t('applies') %>
            </p>
            <hr>
        </div>
    </div>

    <div id="showHideDivCorruptionDeclarationApplies" style="display:<%= !@insurance.does_corruption_declaration_apply? ? 'block' : 'none' %>">
        <div class="row">
            <div class="col-md-8 col-md-offset-1">
                <p> <%= t('explain_corruption_sanctions') %> </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-1">
                <p> <%= check_missing(@insurance.explain_corruption_sanctions) %> </p>
                <hr>
            </div>
        </div>
    </div>

    <div class="row" style="display: <%= @insurance.does_corruption_declaration_apply? ? 'none' : 'block' %>">
        <div class="col-md-8 col-md-offset-1">
            <p class="text-babu">
                <%= t('doesnt_apply') %>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <div class="<%= @insurance.is_all_information_provided_with_best_of_knowledge? ? 'text-babu' : 'text-red' %>">
                <%= t('is_all_information_provided_with_best_of_knowledge') %>
            </div>
            <hr>
        </div>
    </div>
</div>

<div id="finalDeclaration">

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p> <%= t('submit_final_statement') %> </p>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p class="<%= @insurance.has_accepted_terms_conditions? ? 'text-babu' : 'text-red' %>">

                Wir akzeptieren die
                <span>
            <a target="_blank" rel="noopener noreferrer" href="https://www.agaportal.de/_Resources/Persistent/3bfd6a43f17d04f9b34d523df323f0a44a9eaa17/ab_fab.pdf">
              Allgemeinen Bedingungen für Lieferantenkreditdeckung(G)
            </a>
          </span> in Zusammenhang mit den
                <span>
            <a target="_blank" rel="noopener noreferrer" href="https://www.agaportal.de/_Resources/Persistent/b751b874fd137e5f8b22b25d2bd8a15995b09eb2/ab_g.pdf">
              Ergänzenden Bestimmungen für Forderungsabtretungen
            </a>
          </span>

            </p>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <p class="<%= @insurance.has_read_privacy_policy? ? 'text-babu' : 'text-red' %>">

                Wir haben die <span><a target="_blank" rel="noopener noreferrer" href="/pages/termsAndConditions">
        Datenschutzhinweise  </a> </span> zur Kenntnis genommen und sind mit deren Geltung einverstanden.

            </p>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <div class="<%= @insurance.has_read_all_instructions? ? 'text-babu' : 'text-red' %>">
                Wir haben die <span><a target="_blank" rel="noopener noreferrer" href="/pages/guidelines">
                    Hinweise zu Gebühren und Entgelten, Richtlinien, Verantwortlichkeiten   </a> </span> für den Antrag,
                Veröffentlichung von Projektdaten, OECD-Leitsätze für multinationale Unternehmen und
                UN-Leitprinzipien für Wirtschafts- und Menschenrechte zur Kenntnis genommen.
            </div>
            <hr>
        </div>
    </div>
</div>