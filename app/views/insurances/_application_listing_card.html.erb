<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-body">

            <div class="row">
                <div class="col-sm-6">
                    <h4 class="text-blue"><%= t('importer') %></h4>
                </div>
                <div class="col-sm-6">
                    <%= insurance.importer_company_name %>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <h4 class="text-blue"><%= t('destination_country') %></h4>
                </div>
                <div class="col-sm-6">
                    <%= insurance.importer_country %>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <h4 class="text-blue"><%= t('product') %></h4>
                </div>
                <div class="col-sm-6">
                    <%= insurance.exported_goods_type %>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <h4 class="text-blue"><%= t('contract_value') %></h4>
                </div>
                <% if insurance.contract_value %>
                    <div class="col-sm-6">
                        &euro; <%= insurance.contract_value %>
                    </div>
                <% else %>
                    <div class="col-sm-6 text-red">
                        MISSING
                    </div>
                <% end %>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <h4 class="text-blue"><%= t('application_sent_at') %></h4>
                </div>
                <div class="col-sm-6">
                    <%= insurance.updated_at.strftime('%d %b %Y') %>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-sm-12">
                    <% if can_edit %>
                        <%= link_to "Update", edit_insurance_path(insurance.user_id), class: "btn btn-form pull-right" %>
                    <% else %>
                        <%= link_to t('see_summary_of_application'), user_summary_insurance_path(insurance.id), target: :_blank, class: "btn btn-form pull-right" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>