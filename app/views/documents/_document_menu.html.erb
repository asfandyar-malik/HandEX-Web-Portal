<ul class="sidebar-list">

    <li class="sidebar-item">
        <%= link_to "Description", description_document_path, class: "sidebar-link active" %>
        <% if !@document.description.blank? %>
            <span class="pull-right text-babu"><i class="fa fa-check"> </i></span>
        <% end %>
    </li>

    <li class="sidebar-item">
        <%= link_to "Photos", photo_upload_document_path, class: "sidebar-link active" %>
        <% if !@document.photos.blank? %>
            <span id="photo_check" class="pull-right text-babu"><i class="fa fa-check"> </i></span>
        <% end %>
    </li>

</ul>

<% is_ready = !@document.photos && !@document.description %>

<%= form_for @document do |f| %>
    <%= f.hidden_field :active, value: true %>
    <%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-block" %>

<% end %>