<div class="row">
  <div class="col-md-3">
    <%= render 'document_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Location
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @document do |f| %>

            <div class="row">
              <div class="form-group">
                <label> Address </label>

                <%= f.text_field :address, placeholder: "What is your address? ", class: "form-control", required: true %>

              </div>

              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-form" %>
              </div>

            </div>
          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>