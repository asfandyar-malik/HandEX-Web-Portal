<div class="container">
  <div class="section sign-in">
    <div class="row valign-wrapper">
      <div class="col s12 m6">
        <div class="text-section black-text">
          <a class="smooth"><%= image_tag "HandEX_logo4.png", style: 'height:5em;width:auto;' %></a>
          <h2>Einloggen</h2>
          <p class="light">Willkommen Zur체ck! <br>
            Wir sind f체r Sie da, um Ihr Exportgesch채ft zu unterst체tzen.<br>
          </p>
          <a href="/registration">Noch kein Konto? Registrieren Sie sich jetzt</a>
        </div>
      </div>

      <div class="col s12 m6">
        <div class="col s12 custom-form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-section z-depth-1">
              <div class="row">
                <div class="col s12">
                  <div class="form-content">
                    <div class="row">
                      <div class="input-field col s12">
                        <label for="email">E-Mail</label>
                        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "validate" %>

                      </div>
                      <div class="input-field col s12">
                        <label for="password">Passwort</label>
                        <%= f.password_field :password, autocomplete: "off", placeholder: "Passwort", class: "validate" %>
                      </div>

                      <br>
                      <div>
                        <% if devise_mapping.rememberable? %>
                          <%= f.check_box :remember_me %> <%= t('save_data') %>
                        <% end %>

                        <span class="pull-right">
                                                        <%= link_to t('password_forgotten'), new_user_password_path %>
                                                    </span>
                      </div>
                      <br>

                      <div class="actions">
                        <%= f.submit "Einloggen", id: "submit", class: "btn z-depth-0 handex-btn handex-big-btn btn-flat z-depth-0 validate white-text" %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <br><br>
</div>