<div class="row">
    <div class="col-md-4 col-md-offset-4">

        <h2 class="text-center"> Anmelden </h2>
        <br/>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Passwort", class: "form-control" %>
            </div>

            <div>
                <% if devise_mapping.rememberable? %>
                    <%= f.check_box :remember_me %> Daten speichern
                <% end %>

                <span class="pull-right"></span>
                <%= link_to "Passwort vergessen?", new_user_password_path %>
                </span>
            </div>

            <br><br>

            <div class="actions">
                <%= f.submit "Einloggen", class: "btn btn-green btn-block" %>
            </div>
        <% end %>
    </div>
</div>