<%= render 'shared/navbar' %>

<div class="container">
    <div class="section standard">
        <div class="row valign-wrapper">
            <div class="col s12 m6">
                <div class="text-section black-text">
                    <a class="smooth"><%= image_tag "HandEX_logo4.png", style: 'height:5em;width:auto;' %></a>
                    <h3> <%= t('your_profile') %></h3>
                    <p>Hier können Sie Ihr Profil ansehen </p>
                </div>
            </div>

            <div class="col s12 m6">
                <div class="row">
                    <div class="col s12 custom-form">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                            <%= devise_error_messages! %>
                            <%= render 'shared/devisemes' %>
                            
                            <div class="form-section z-depth-1">
                                <div class="row">

                                    <div class="col s12">
                                        <div class="form-content no-padding">
                                            <div class="row">
<!--                                                <h4> <%#= t('your_profile') %></h4> <br>-->

                                                <div class="input-field col s12 no-padding">
                                                    <label> Firmenname </label>
                                                    <%= f.text_field :company_name, autofocus: true, class: "form-control" %>
                                                </div>

                                                <div class="input-field col s12 no-padding">
                                                    <label> Telefonnummer </label>
                                                    <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
                                                </div>

                                                <div class="input-field col s12 no-padding">
                                                    <label for="email"> Email </label>
                                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                                                </div>

                                                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                                    <div>Wartet momentan auf Bestätigung für: <%= resource.unconfirmed_email %></div>
                                                <% end %>
    
                                                <div class="input-field col s12 no-padding">
                                                    <% if @minimum_password_length %>
                                                        <label> Neues Passwort (Mindestens <%= @minimum_password_length %>  Zeichen) </label>
                                                        <label> (Lassen Sie das Feld leer, wenn Sie es nicht ändern möchten) </label>
                                                    <% end %>
                                                    <%= f.password_field :password, autocomplete: "off", minlength: 6 , class: "form-control" %>
                                                </div>

                                                <div class="input-field col s12 no-padding">
                                                    <label> Passwort bestätigen </label>
                                                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                                                </div>
    
                                                <div class="input-field col s12 no-padding">
                                                    <label> Aktuelles Passwort </label>
                                                    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                                                </div>

                                                <div class="input-field col s12 no-padding">
                                                    <div class="actions">
                                                        <a class="btn-big btn z-depth-0 handex-btn validate" href="<%= submitted_applications_user_path(current_user.id) %>">Zurück</a>
                                                        <%= f.submit t('submit'), class: "btn-big btn z-depth-0 handex-btn validate" %>
                                                    </div>
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br>
</div>