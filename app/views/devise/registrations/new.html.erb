<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">

    <h2 class="text-center"> Registrieren </h2>
    <br>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devisemes' %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, placeholder: "Firmenname", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
          <em>(Mindestens <%= @minimum_password_length %>  Zeichen)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Passwort", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Registrieren", class: "btn btn-green btn-block" %>
      </div>
    <% end %>
  </div>
</div>


