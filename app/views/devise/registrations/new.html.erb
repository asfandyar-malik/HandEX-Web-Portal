<div class="row">

    <div class="hidden-xs hidden-sm col-md-4 col-lg-4 mt-150 col-md-offset-1 col-lg-offset-1">

        <div class="container" align="center">
            <a class="smooth"><%= image_tag "HandEX_logo4.png", style: 'height:5em;width:auto;' %></a>
            <br> <br> <br>
            <h2> Account registrieren </h2> <br>
            <p> Wir freuen uns, dass Sie sich für HandEX entschieden haben. Wir brauchen nur ein paar Informationen, um Ihnen den Einstieg zu erleichtern </p>
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 col-md-offset-1 col-lg-offset-1">
        <br><br><br><br>

        <div class="container" style="background-color: white">

            <br><br>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render 'shared/devisemes' %>

                <div class="col-md-5 col-md-offset-1">
                    <p> Firmenname </p>
                    <%= f.text_field :fullname, autofocus: true, class: "form-control" %>
                </div>

                <div class="col-md-5">
                    <p> Kundentyp </p>
                    <%= f.select :fullname, options_for_select(["Bitte auswählen", "Exporteur", "Makler"]), {}, class: "form-control" %>
                </div>

                <div class="col-md-5 col-md-offset-1">
                    <br>
                    <p> Vorname </p>
                    <%= f.text_field :fullname, autofocus: true, class: "form-control" %>
                </div>

                <div class="col-md-5">
                    <br>
                    <p> Nachname </p>
                    <%= f.text_field :fullname, autofocus: true, class: "form-control" %>
                </div>

                <div class="col-md-5 col-md-offset-1">
                    <br>
                    <p> Email Address </p>
                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>

                <div class="col-md-5">
                    <br>
                    <p> Telefonnummer </p>
                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>

                <div class="col-md-10 col-md-offset-1">
                    <br>
                    <% if @minimum_password_length %>
                        <p>Passwort (Mindestens <%= @minimum_password_length %>  Zeichen)</p>
                    <% end %>

                    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

                    <br>
                    <div class="actions">
                        <%= f.submit "Registrieren", class: "btn btn-blue btn-block" %>
                    </div>
                    <br><br>
                </div>
            <% end %>
            <br>
        </div>
    </div>
</div>


