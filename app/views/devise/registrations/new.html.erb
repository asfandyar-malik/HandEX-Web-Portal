<div class="notice"><%= devise_error_messages! %></div>

<div class="container">
    <div class="section registration">
        <div class="row valign-wrapper">
            <div class="col s12 m6">
                <div class="text-section black-text">
                    <a class="smooth"><%= image_tag "HandEX_logo4.png", style: 'height:5em;width:auto;' %></a>
                    <h3><%= t :account_registration %> </h3>
                    <p>Wir freuen uns, dass Sie sich entschieden haben HandEX zu nutzen.<br>
                        Wir brauchen nur noch folgende Informationen, um zu starten.<br>

                    </p>
                    <a href="/login" class="un"><u> <%= t :account_exists %></u></a>
                </div>
            </div>
            <div class="col s12 m6">
                <div class="col s12 custom-form">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                        <div class="form-section z-depth-2">

                            <div class="row">
                                <div class="col s12">
                                    <div class="form-content">
                                        <div class="row">

                                            <div class="input-field col s12">
                                                <label><%= t :company_name %></label>
                                                <%= f.text_field :company_name, id: "company_name", required: true, autofocus: true, class: "validate" %>
                                            </div>

                                            <div class="input-field col s12 m6">
                                                <label><%= t :firstname %></label>
                                                <%= f.text_field :firstname, autofocus: true, class: "validate" %>
                                            </div>

                                            <div class="input-field col s12 m6">
                                                <label><%= t :lastname %></label>
                                                <%= f.text_field :lastname, id: "last_name", autofocus: true, class: "validate" %>
                                            </div>

                                            <div class="input-field col s12 m6">
                                                <label><%= t :email %></label>
                                                <%= f.email_field :email, autofocus: true, required: true, class: "validate" %>
                                            </div>

                                            <div class="input-field col s12 m6">
                                                <label><%= t :phone_number %></label>
                                                <%= f.text_field :phone_number, autofocus: true, class: "validate" %>
                                            </div>

                                            <div class="input-field col s12 m12">
                                                <%= f.label :user_type, t('user_type') %>
                                                <%= f.select :user_type, options_for_select([[t("please_select"), "0"],[t("importer"), "1"], [t("exporter"), "2"], [t("broker"), "3"]]), {}, class: 'validate', required: true %>
                                            </div>

                                            <div class="input-field col s12">
                                                <% if @minimum_password_length %>
                                                    <label>Passwort (Mindestens <%= @minimum_password_length %>  Zeichen)</label>
                                                <% end %>
                                                <%= f.password_field :password, required: true,  minlength: 6 , autocomplete: "off", class: "form-control" %>
                                            </div>

                                            <div class="col s12">
                                                <label>
                                                    <input type="checkbox" required/>

                                                    <span class="black-text text-bold"><strong> <%= t :accept_terms_1 %>
                                                    <span> <a target="_blank" rel="noopener noreferrer" href="/pages/registration_terms_and_conditions">  <%= t :accept_terms_2 %></a></span>
                                                      </strong> </span>
                                                </label>
                                            </div>

                                            <div class="input-field col s12">
                                                <div class= "actions">
                                                    <%= f.submit "Registrieren", id: "submit",  class: "btn z-depth-0 handex-btn handex-big-btn btn-flat z-depth-0 validate white-text"%>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>