<div class="container">
    <div class="section sign-in">
        <div class="row valign-wrapper">

            <div class="col s12 m6">
                <div class="text-section black-text">
                    <a class="smooth"><%= image_tag "HandEX_logo4.png", style: 'height:5em;width:auto;' %></a>
                    <h4>Passwort Vergessen?</h4>
                    <p>Kein Problem, passiert jedem! Tippen Sie einfach Ihre E-Mail Addresse ein um Ihr
                        Passwort zur√ºckzusetzen.<br>
                    </p>
                    <a href="<%= new_user_session_path %>" class="un"><u>Errinern Sie Ihr Passwort? Einloggen.</u></a>
                </div>
            </div>

            <div class="col s12 m6">
                <div class="col s12 custom-form">
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
                        <div class="form-section z-depth-1">
                               <div class="row">
                                <div class="col s12">
                                    <div class="form-content">
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <label>E-Mail</label>
                                                <%= f.email_field :email, autofocus: true, required: true, class: "validate" %>
                                            </div>

                                            <div class="input-field col s12">
                                                <div class="actions">
                                                    <%= f.submit "Senden Passwort-Reset-Anweisungen", id: "submit", class: "btn z-depth-0 handex-btn handex-big-btn btn-flat z-depth-0 validate white-text" %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

        </div>
    </div>
</div>