<div class="panel panel-default">

    <div class="panel-heading">
        Documents
    </div>

    <div class="panel-body">
        <div class="container">

            <%= form_for @officialdocument, url: tradeinfo_officialdocuments_path, html: {multipart: true}, method: :post do |form| %>

                <h3><b> Please add the following documents </b></h3>

                <br><br><br>

                <div class="row">
                    <div class="col-md-5">
                        <h4> Invoices 2017 </h4>
                    </div>
                    <div class="col-md-7">
                        <%= form.file_field :invoiceone %>
                    </div>
                </div>

                <br><br>
                <br><br>

                <div class="row">
                    <div class="col-md-5">
                        <h4> Invoices 2018 </h4>
                    </div>
                    <div class="col-md-5">
                        <%= form.file_field :invoicetwo %>
                    </div>
                </div>

                <br>
                <hr align="middle" width="50%">
                <br>

                <div class="row">
                    <div class="col-md-5">
                        <h4> Balance Sheet </h4>
                    </div>
                    <div class="col-md-5">
                        <%= form.file_field :balancesheet %>
                    </div>
                </div>

                <br><br>
                <br><br>

                <div class="row">
                    <div class="col-md-5">
                        <h4> Company Registration Certificate </h4>
                    </div>
                    <div class="col-md-5">
                        <%= form.file_field :companyregistrationcertificate %>
                    </div>
                </div>

                <br><br>
                <br><br>

                <div class="row">
                    <div class="col-md-5">
                        <h4> ShareHolders Agreement </h4>
                    </div>
                    <div class="col-md-5">
                        <%= form.file_field :shareholdersagreement %>
                    </div>
                </div>

                <br>
                <hr align="middle" width="50%">
                <br>

                <div class="row">
                    <div class="col-md-5">
                        <h4> Identification Document (Majority Shareholder)</h4>
                    </div>
                    <div class="col-md-5">
                        <%= form.file_field :identificationdocumentshareholder %>
                    </div>
                </div>

                <br><br>
                <br><br>

                <div class="row">
                    <div class="col-md-5">
                        <h4> Extra Document </h4>
                    </div>
                    <div class="col-md-5 ">
                        <%= form.file_field :extradoc, name: 'picture' %>
                    </div>
                </div>

                <br><br>

                <div id="DIV_295">
                    <%= button_to "Back", accepted_tradeinfo_path(@tradeinfo, @financial), id: "A_296", method: :get %>
                    <button type="Submit" id="BUTTON_297"> PROCEED</button>
                </div>

            <% end %>
        </div>
        <br><br>
    </div>
</div>

<script>
    $(document).ready(function () {

        $('.datepicker').pickadate({
            selectMonths: true, // Creates a dropdown to control month
            selectYears: 2 // Creates a dropdown of 15 years to control year
        });
    });

</script>