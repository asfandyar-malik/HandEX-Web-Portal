<div class="panel panel-default">
    <div class="panel-heading">
        Insert the Documents
    </div>
    <div class="panel-body">
        <div class="container">
            <%= form_for @hokument, url: hokument_new_path, html: {multipart: true} do |form| %>

                <div class="row">
                    <div class="col-md-4 select">
                        <div class="form-group">
                            <label>Heskription</label>
                            <%= form.text_field :heskription, class: "form-control", required: true %>
                        </div>
                    </div>
                </div>

                <%= form.file_field :avatar %>
                <%= form.submit %>

                <div><%= form.submit "Insert Document", class: "btn btn-normal" %></div>

            <% end %>

        </div>
    </div>
</div>