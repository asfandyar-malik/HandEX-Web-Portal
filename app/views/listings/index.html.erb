<div class="container">

    <p id="notice"><%= notice %></p>

    <h1>Listings</h1>
    <%= link_to 'New Listing', new_listing_path, class: 'btn btn-warning pull-right' %>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">City</th>
            <th scope="col">Country</th>
        </tr>
        </thead>

        <tbody>
        <% @listings.each do |listing| %>
            <tr>
<!--                <th scope="row"><%#= listing.id %></th>-->
<!--                <td><%#= listing.city %></td>-->
<!--                <td><%#= listing.country %></td>-->

                <td>
                    <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-warning btn-xs' %>
                    <%= link_to 'Destroy', listing, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-xs' %>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
