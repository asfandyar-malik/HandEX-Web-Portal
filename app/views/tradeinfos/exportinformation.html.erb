<div class="row">
    <div class="col-md-3">
        <%#= render 'document_menu' %>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">

            <div class="panel-heading">
                Export Details
            </div>

            <div class="panel-body">
                <div class="container">
                    <%= form_for @tradeinfo do |f| %>

                        <div class="row">
                            <div class="form-group">
                                <label>Company Name</label>
                                <%= f.text_area :companyName, rows: 2, placeholder: "Company Name", class: "form-control", required: true %>
                            </div>

                            <div class="form-group">
                                <label>Company Email</label>
                                <%= f.text_area :companyEmail, rows: 2, placeholder: "Company Email", class: "form-control", required: true %>
                            </div>

                            <div class="form-group">
                                <label>Company Phone</label>
                                <%= f.text_area :companyPhone, rows: 2, placeholder: "Company Phone", class: "form-control", required: true %>
                            </div>

                            <div class="form-group">
                                <label>Importer Name</label>
                                <%= f.text_area :importerName, rows: 2, placeholder: "Importer Name", class: "form-control", required: true %>
                            </div>

                            <div class="form-group">
                                <label>Importer Email</label>
                                <%= f.text_area :importerEmail, rows: 2, placeholder: "Importer Email", class: "form-control", required: true %>
                            </div>

                            <div class="form-group">
                                <label>Tax Id</label>
                                <%= f.text_area :taxId, rows: 2, placeholder: "Tax Id", class: "form-control", required: true %>
                            </div>

                        </div>

                        <div class="text-left">
                            <%= f.submit "Submit", class: "btn btn-form" %>
                        </div>

                    <% end %>
                </div>
            </div>

        </div>
    </div>
</div>
