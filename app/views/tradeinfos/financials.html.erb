<div class="row">
    <div class="col-md-2">
        <%= render 'tradeinfo_menu' %>
    </div>
    <div class="col-md-10">
        <div class="panel panel-default">

            <div class="panel-heading">
                Financials
            </div>

            <div class="panel-body">
                <div class="container">
                    <%= form_for @tradeinfo do |f| %>

                        <div id="DIV_226">

                            <div class="form-group">
                                <label class="control-label"> Projected Sales (€) </label>

                                <div class="row">
                                    <br>
                                    <div class="col-md-5">
                                        <p> 2018-2019 </p>
                                        <div> <%= f.text_field :companyEmail, class: "form-control", required: true %> </div>
                                    </div>
                                    <div class="col-md-5">
                                        <p> 2019-2020 </p>
                                        <div> <%= f.text_field :companyEmail, class: "form-control", required: true %> </div>
                                    </div>
                                </div>

                            </div>

                            <div class="form-group">
                                <label class="control-label"> Current Financial Parameters (€) </label>

                                <div class="row">
                                    <br>
                                    <div class="col-md-6">
                                        <p> Net Profitability </p>
                                        <div> <%= f.text_field :companyEmail, class: "form-control", required: true %> </div>
                                    </div>
                                    <div class="col-md-6">
                                        <p> Net Worth </p>
                                        <div> <%= f.text_field :companyEmail, class: "form-control", required: true %> </div>
                                    </div>

                                    <div class="col-md-6">
                                        <br>
                                        <p> IFSC of AD Bank</p>
                                        <div> <%= f.text_field :companyEmail, class: "form-control", required: true %> </div>
                                    </div>

                                </div>

                            </div>
                            <br>

                            <div class="form-group">
                                <label class="control-label"> Do you have any outstanding Bank or NBFC
                                    facilities? </label>
                                <br>
                                <%= f.check_box :companyPhone, required: true, id: "outstandingDebt" %> Yes
                            </div>

                            <div id="showHideDiv" style="display: none">
                                <div class="row">
                                    <br>
                                    <div class="col-md-6">
                                        <p> Name of institution </p>
                                        <div> <%= f.text_field :companyEmail, class: "form-control", required: true %> </div>
                                    </div>
                                    <div class="col-md-3">
                                        <p> Type of Loan </p>
                                        <div> <%= f.text_field :companyEmail, class: "form-control", required: true %> </div>
                                    </div>

                                    <div class="col-md-3">
                                        <p> Size(€) </p>
                                        <div> <%= f.text_field :companyEmail, class: "form-control", required: true %> </div>
                                    </div>
                                </div>
                            </div>

                            <br>

                            <div class="form-group">
                                <label class="control-label"> Has the company ever defaulted or been overdue on any bank
                                    facilities </label>
                                <br>
                                <%= f.check_box :companyPhone, required: true, id: "everDefaulted" %> Yes
                            </div>

                            <div id="showHideDivDefaulted" style="display: none">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p> if yes, explain </p>
                                        <div> <%= f.text_area :companyEmail, class: "form-control", required: true %> </div>
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label"> Are any receivables currently factored? </label>
                                <br><br>
                                <%= f.check_box :companyPhone, required: true,  id: "receivableFactored" %> Yes
                            </div>


                            <div id="showHideDivReceivableFactored" style="display: none">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p> if yes, with whom? </p>
                                        <div> <%= f.text_area :companyEmail, class: "form-control", required: true %> </div>
                                    </div>
                                </div>
                            </div>

                            <br>


                            <%= form_for @tradeinfo do |f| %>
                                <%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-lg" %>
                            <% end %>

                        </div>

                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(function () {
        $("#outstandingDebt").click(function () {
            if ($(this).is(":checked")) {
                $("#showHideDiv").show();
            } else {
                $("#showHideDiv").hide();
            }
        });
    });

    $(function () {
        $("#everDefaulted").click(function () {
            if ($(this).is(":checked")) {
                $("#showHideDivDefaulted").show();
            } else {
                $("#showHideDivDefaulted").hide();
            }
        });
    });

    $(function () {
        $("#receivableFactored").click(function () {
            if ($(this).is(":checked")) {
                $("#showHideDivReceivableFactored").show();
            } else {
                $("#showHideDivReceivableFactored").hide();
            }
        });
    });

</script>



