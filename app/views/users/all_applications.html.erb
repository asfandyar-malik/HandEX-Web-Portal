<%= render 'shared/navbar' %>

<nav class="handex-color-1 z-depth-0">
    <div class="nav-wrapper">
        <% if current_user.is_broker? %>
            <span class="nav-title">Makler Portal</span>
            <a class="z-depth-0 btn z-depth-0 handex-btn-positiv" href="/pages/invite_or_fill_yourself">Antrag starten</a>
            <a class="z-depth-0 btn handex-btn rounded inactive" href="<%= invited_exporter_user_path(current_user.id) %>" > Eingeladen </a>
        <% else %>
            <span class="nav-title">Kunden Portal</span>
            <a class="z-depth-0 btn z-depth-0 handex-btn-positiv" href="/pages/products">Antrag starten</a>
        <% end %>
        <a class="z-depth-0 btn handex-btn rounded inactive" href="<%= draft_applications_user_path(current_user.id) %>" >EntwÃ¼rfe</a>
        <a class="z-depth-0 btn handex-btn rounded inactive" href="<%= submitted_applications_user_path(current_user.id) %>">Versendet</a>
