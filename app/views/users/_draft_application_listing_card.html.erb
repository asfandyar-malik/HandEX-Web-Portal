                </div>
            </div>

            <div class="valign-wrapper">
                <div class="col m2">
                    <i class="custom_icon send-icon"></i>
                </div>
                <div class="col m10">
                    <div class="summary"> <%= t('importer_tax_id') %></div>
                    <p><b><%= application.importer_tax_id %></b></p>
                </div>
            </div>

            <div class="valign-wrapper">
                <div class="col m2">
                    <i class="custom_icon money-icon"></i>
                </div>
                <div class="col m10">
                    <div class="summary"> <%= t('servicing_offered') %></div>
                    <p><b><%= application.exporter_offers_servicing_for_goods %></b></p>
                </div>
            </div>
        </div>

    </div>
</div>
<% end %>

