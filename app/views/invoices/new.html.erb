<div class="panel panel-default">
    <div class="panel-heading">
        Insert the Invoices
    </div>
    <div class="panel-body">
        <div class="container">

            <%= form_for @invoice do |f| %>

                <div class="row">

                        <div class="form-group">
                            <label> Currency </label>
                            <%= f.select :currency, [["EUR", "EUR"], ["USD", "USD"]],
                                         id: "delivered_specific_date", prompt: "Select...", class: "form-control" %>
                        </div>

                        <div class="form-group">
                            <label> Grand Total Value of Invoice </label>
                            <%= f.text_field :grand_total_invoice_value, placeholder: "eg: $100 ", class: "form-control", required: true %>
                        </div>

                </div>

                <div><%= f.submit "Insert Invoice", class: "btn btn-normal" %></div>

            <% end %>


        </div>
    </div>
</div>
