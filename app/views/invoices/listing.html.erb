<div class="row">
  <div class="col-md-3">
    <%= render 'invoice_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Listing
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @invoice do |f| %>

            <div class="row">

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>Home Type</label>
                  <%= f.select :grand_total_invoice_value, [["Apartment", "Apartment"], ["House", "House"], ["Bed & Breakfast", "Bed & Breakfast"]],
                               id: "home_type", prompt: "Select...", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>Room Type</label>
                  <%= f.select :currency, [["Entire", "Entire"], ["Private", "Private"], ["Shared", "Shared"]],
                               id: "invoice_type", prompt: "Select...", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>Accommodate</label>
                  <%= f.select :delivered_specific_date, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                               id: "accommodate", prompt: "Select...", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>Bed Invoices</label>
                  <%= f.select :defect_free, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                               id: "bed_invoice", prompt: "Select...", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>Bath Invoices</label>
                  <%= f.select :belong_me, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                               id: "bath_invoices", prompt: "Select...", class: "form-control" %>
                </div>
              </div>

            </div>

            <div><%= f.submit "Save", class: "btn btn-normal" %></div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>