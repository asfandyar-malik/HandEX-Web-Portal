<div class="row">
    <div class="col-md-3">
        <%= render 'invoice_menu' %>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                Attachments
            </div>

            <div class="panel-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-6">
                            <!-- ATTACHMENT UPLOAD GOES HERE -->

                            <%= form_for @invoice, url: invoice_attachments_path(@invoice), method: 'post', html: {multipart: true} do |f| %>
                                <div class="row">
                                    <div class="form-group">
                                    <span class="btn btn-default btn-file text-babu">
                                        <i class="fa fa-cloud-upload" aria-hidden="true"></i>
                                        Select Attachments
                                        <%= file_field_tag "images[]", type: :file, multiple: true %>
                                    </span>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <%= f.submit "Add Attachments", class: "btn btn-form" %>
                                </div>
                            <% end %>
                        </div>
                    </div>

                    <div id="attachments"> <%= render 'attachments/attachments_list' %></div>
                </div>
            </div>

        </div>
    </div>
</div>