<div class="row">
    <div class="col-md-3">
        <ul class="sidebar-list">
            <li class="sidebar-item"><%= link_to "Your Documents", documents_path, class: "sidebar-link active" %></li>
            <li class="sidebar-item"><%= link_to "Your Invoices", invoices_path, class: "sidebar-link" %></li>
        </ul>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                Invoices
            </div>
            <div class="panel-body">

                <% @invoices.each do |invoice| %>
                    <div class="row">
                        <div class="col-md-2">
                            <%= image_tag invoice.cover_photo(:thumb), height: 100, width: 100 %>
                        </div>
                        <div class="col-md-7">
                            <h4><%= invoice.delivered_specific_date %></h4>
                        </div>
                        <div class="col-md-3 right">
                            <%= link_to "Update", listing_invoice_path(invoice), class: "btn btn-form" %>
                        </div>
                    </div>
                    <hr/>
                <% end %>


                <div class="row">
                    <div class="col-md-2 right">
                        <%= button_to "Insert New Invoice", new_invoice_path, method: :get, class: "btn btn-normal" %>
                    </div>
                </div>

            </div>


        </div>
    </div>
</div>
