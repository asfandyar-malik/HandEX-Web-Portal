<ul class="sidebar-list">

    <li class="sidebar-item">
        <%= link_to "Listing", listing_invoice_path, class: "sidebar-link active" %>
        <span class="pull-right text-babu"><i class="fa fa-check"> </i></span>
    </li>

    <li class="sidebar-item">
        <%= link_to "Currency", pricing_invoice_path, class: "sidebar-link active" %>
        <% if !@invoice.currency.blank? %>
            <span class="pull-right text-babu"><i class="fa fa-check"> </i></span>
        <% end %>
    </li>

    <li class="sidebar-item">
        <%= link_to "Description", description_invoice_path, class: "sidebar-link active" %>
        <% if !@invoice.belong_me.blank? %>
            <span class="pull-right text-babu"><i class="fa fa-check"> </i></span>
        <% end %>
    </li>

</ul>

<% is_ready = !@invoice.belong_me%>


<%= form_for @invoice do |f| %>
    <%= f.hidden_field :active, value: true %>
    <%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-block" %>
<% end %>