<ul class="sidebar-list">
    <li class="sidebar-item">
        <%= link_to "Auxillary Information", auxillary_invoice_path, class: "sidebar-link active" %>
        <% if !@invoice.belong_me.blank? && !@invoice.defect_free.blank? && !@invoice.delivered_specific_date.blank? %>
            <span class="pull-right text-babu"><i class="fa fa-check"> </i></span>
        <% end %>
    </li>

    <li class="sidebar-item">
        <%= link_to "Attachments", attachment_upload_invoice_path, class: "sidebar-link active" %>
        <% if !@invoice.belong_me.blank? %>
            <span id="attachment_check" class="pull-right text-babu"><i class="fa fa-check"> </i></span>
        <% end %>
    </li>


</ul>

<% is_ready = !@invoice.belong_me && !@invoice.defect_free && !@invoice.delivered_specific_date %>


<%= form_for @invoice do |f| %>
    <%= f.hidden_field :active, value: true %>
    <%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-block" %>
<% end %>