<%= render 'shared/navbar' %>

<div class="container">
    <div class="section standard">
        <div class="row valign-wrapper">

            <div class="col s12 m6">
                <div class="text-section black-text">
                    <a class="smooth"><%= image_tag "HandEX_logo4.png", style: 'height:5em;width:auto;' %></a>
                    <h4><%= t :contact_info_customer %></h4>
                    <p> <%= t :invite_exporter_info %> </p>
                </div>
            </div>

            <div class="col s12 m6">
                <div class="row">
                    <div class="col s12 custom-form">
                        <%= form_with(model: @invite_exporter, local: true, html: {multipart: true}, id: "invite-exporter") do |f| %>
                            <div class="form-section z-depth-1">
                                <div class="row">

                                    <div class="col s12">
                                        <div class="form-content">
                                            <div class="row">

                                                <div class="input-field col s12">
                                                    <label> <%= t :exporter_name %> </label>
                                                    <%= f.text_field :exporter_name, autofocus: true, required: true, class: "validate" %>
                                                </div>

                                                <div class="input-field col s12">
                                                    <label> <%= t :exporter_representative_name %> </label>
                                                    <%= f.text_field :exporter_representative_name, required: true, class: "validate" %>
                                                </div>

                                                <div class="input-field col s12">
                                                    <label for="email"> <%= t :exporter_email %> </label>
                                                    <%= f.email_field :exporter_email, autofocus: true, required: true, class: "validate" %>
                                                </div>

                                                <div class="input-field col s12">
                                                    <label> <%= t :exporter_telephone %> </label>
                                                    <%= f.text_field :exporter_telephone, required: true, autofocus: true, class: "validate" %>
                                                </div>

                                                <div class="input-field col s12">
                                                    <label> <%= t :exporter_broker_id %> </label>
                                                    <%= f.text_field :exporter_broker_id, autofocus: true, class: "validate" %>
                                                </div>

                                                <div class="input-field col s12">
                                                    <div class="actions">
                                                        <%= f.submit "Absenden", id: "submit", class: "btn z-depth-0 handex-btn handex-big-btn btn-flat z-depth-0 validate white-text" %>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <br><br>
</div>

<script>
    //disabling ENTER key (AscII: 13) on our form because enter was submitting application
    $("form").on("keypress", function (e) {
        if (e.keyCode == 13) {
            return false;
        }
    });
</script>