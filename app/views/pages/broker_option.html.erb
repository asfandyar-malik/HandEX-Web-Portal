<div class="container valign-wrapper">
    <div class="section">
        <div class="row valign">
            <div class="col s12 offset-s2">
                <div class="card teal">
                    <div class="card-content white-text center-align">
                        <span> Bitte wählen Sie aus, wie Sie vorgehen möchten </span>
                    </div>
                </div>

                <div class="form-section z-depth-1 center-align">
                    <div class="row">

                        <div class="col s5 offset-s1">

                            <% if params[:locale] %>
                                <% @export_portal = 'pages/advice' %>
                            <% else %>
                                <% @export_portal = params[:locale].to_s + '/pages/advice' %>
                            <% end %>

                            <div class="card blue-grey darken-1">
                                <div class="card-content white-text">
                                    <span class="card-title"> Antrag für Ihren Kunden </span>
                                    <p> Sie füllen den Antrag für Ihren Kunden aus</p>
                                </div>
                                <div class="card-action">
                                    <a href="pages/advice"> This is a link</a>
                                </div>
                            </div>
                        </div>

                        <div class="col s5">
                            <% if params[:locale] %>
                                <% @import_portal = '/' + params[:locale].to_s + '/imports/new' %>
                            <% else %>
                                <% @import_portal = params[:locale].to_s + '/imports/new' %>
                            <% end %>

                            <div class="card blue-grey darken-1">
                                <div class="card-content white-text">
                                    <span class="card-title"> Exporteur fills </span>
                                    <p> Ihr Kunde wird zu HandEX eingeladen und füllt den Antrag selbst aus </p>
                                </div>
                                <div class="card-action">
                                    <a href="invite_exporters/new"> This is a link</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>