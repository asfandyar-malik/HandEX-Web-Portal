<div class="container valign-wrapper">
  <div class="section">
    <div class="row">
      <div class="col s12">
        <div class="card top-info-card">
          <div class="card-content white-text">
            <span> Bitte wählen Sie aus, wie Sie vorgehen möchten.</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12 offset-s2">
        <div class="form-section z-depth-1">
          <div class="row">

            <div class="col s5 offset-s1">

              <% if params[:locale] %>
                <% @export_portal = 'pages/advice' %>
              <% else %>
                <% @export_portal = params[:locale].to_s + '/pages/advice' %>
              <% end %>
              <div class="card small">
                <div class="card-title sent_financing_application white-text valign-wrapper">
                  <div class="valign-wrapper">
                    <div>
                      <strong>Antrag für Ihren Kunden</strong>
                    </div>
                  </div>
                </div>
                <div class="card-content">
                  <div class="valign-wrapper">
                    <div>
                      <p>Sie füllen den Antrag für Ihren Kunden aus</p>
                    </div>
                  </div>
                </div>
                <div class="card-action center">
                  <a href="pages/advice" class="">Weiter</a>
                </div>
              </div>
            </div>

            <div class="col s5">
              <% if params[:locale] %>
                <% @import_portal = '/' + params[:locale].to_s + '/imports/new' %>
              <% else %>
                <% @import_portal = params[:locale].to_s + '/imports/new' %>
              <% end %>
              <div class="card small">
                <div class="card-title sent_financing_application white-text valign-wrapper">
                  <div class="valign-wrapper">
                    <div>
                      <strong>Der Exporteur</strong>
                    </div>
                  </div>
                </div>
                <div class="card-content">
                  <div class="valign-wrapper">
                    <div>
                      <p>Ihr Kunde wird zu HandEX eingeladen und füllt den Antrag selbst aus</p>
                    </div>
                  </div>
                </div>
                <div class="card-action center">
                  <a href="invite_exporters/new">Weiter</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>