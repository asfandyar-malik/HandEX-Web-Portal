<%= render 'shared/navbar' %>

<div class="container">
        <div class="row">
            <div class="col s10 m10 l10 offset-s1 offset-l1">
                <div class="form-section z-depth-1">
                    <div class="text-section black-text center-align">
                        <h4>Bitte wählen Sie aus, wie Sie vorgehen möchten.</h4>
                    </div>
                    <div class="row">
                        <div class="col s4 m5 offset-s2 offset-m1">
                            <% if params[:locale] %>
                                <% @export_portal = 'pages/advice' %>
                            <% else %>
                                <% @export_portal = params[:locale].to_s + '/pages/advice' %>
                            <% end %>
                            <div class="card small">
                                <div class="card-title white-text valign-wrapper">
                                    <div class="valign-wrapper">
                                        <div>
                                            <strong>Antrag für Ihren Kunden</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-content">
                                    <div class="valign-wrapper">
                                        <div>
                                            <p>Sie füllen den Antrag für Ihren Kunden aus</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-action">
                                    <div class="input-field col s12 center-align">
                                        <a href="pages/products" class="btn z-depth-0 handex-btn btn btn-large btn-flat z-depth-0 validate white-text" name="action">Los
                                            Geht's</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col s4 m5">
                            <% if params[:locale] %>
                                <% @import_portal = '/' + params[:locale].to_s + '/imports/new' %>
                            <% else %>
                                <% @import_portal = params[:locale].to_s + '/imports/new' %>
                            <% end %>
                            <div class="card small">
                                <div class="card-title valign-wrapper white-text">
                                    <div class="valign-wrapper ">
                                        <div>
                                            <strong>Der Exporteur</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-content">
                                    <div class="valign-wrapper">
                                        <div>
                                            <p>Ihr Kunde wird zu HandEX eingeladen und füllt den Antrag selbst aus</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-action white-text">
                                    <div class="input-field col s12 center-align">
                                        <a href="invite_exporters/new" class="btn z-depth-0 handex-btn btn btn-large btn-flat z-depth-0 validate white-text" name="action">Los
                                            Geht's</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>